{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "charset": "utf8",

    /* Strict Checks */
    "strictNullChecks": true, /* 엄격하게 undefined 및 null 관리 */
    "noImplicitAny": true, /* any 타입 설정 시 에러 */
  }
}